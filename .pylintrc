[MESSAGES CONTROL]
# Disable specific pylint checks that are causing issues or not relevant
disable=
    missing-module-docstring,
    missing-function-docstring,
    missing-class-docstring,
    too-few-public-methods,
    too-many-arguments,
    too-many-locals,
    too-many-branches,
    too-many-statements,
    astroid-error,
    import-error,
    no-member,
    duplicate-code

[FORMAT]
max-line-length=100

[BASIC]
# Allow single letter variable names in specific contexts
good-names=i,j,k,x,y,z,e,f,_

[IMPORTS]
# Known third party libraries
known-third-party=pytest,numpy,torch,PIL,cv2,yaml,transformers,sam2